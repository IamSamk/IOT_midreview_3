{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "coins": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$symbol": {
        "price": {
          ".validate": "newData.isNumber()"
        },
        "updatedAt": {
          ".validate": "newData.isNumber()"
        },
        "source": {
          ".validate": "newData.isString()"
        },
        "$other": {
          ".validate": true
        }
      }
    },
    "alerts": {
      "$alertId": {
        ".read": "auth != null && data.child('uid').val() === auth.uid",
        ".write": "auth != null && auth.token.device === true"
      }
    }
  }
}
